{
    "env": {
        "node": true,
        "browser": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "semi": ["error", "always"],
        "quotes": ["error", "double"],
        "@typescript-eslint/ban-ts-comment": "off",
        "indent": ["error", 2]
    },
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    }
}